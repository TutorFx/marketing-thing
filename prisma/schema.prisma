datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = []
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  picture   String?
  password  String?
  firstname String?
  lastname  String?
  role      Role?    @default(USER)
}

enum Role {
  ADMIN
  USER
}